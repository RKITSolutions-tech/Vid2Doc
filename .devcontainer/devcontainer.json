{
  "name": "Video-Doc - CUDA Devcontainer",
  "build": {
    "dockerfile": "Dockerfile.cuda"
  },
  "runArgs": ["--gpus", "all"],
  "features": {},
  "postCreateCommand": "/workspace/scripts/post_create.sh",
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "GitHub.copilot-chat",
        "GitHub.vscode-pull-request-github"
      ]
    }
  }
}
{
  "name": "video-docs-devcontainer",
  "dockerComposeFile": ["../docker-compose.yml"],
  "service": "app", // change to your service name in docker-compose.yml
  "runServices": ["app"],
  "workspaceFolder": "/workspaces",
  "postCreateCommand": ".devcontainer/post_create.sh",
  "customizations": {
    "vscode": {
      "extensions": ["ms-python.python"]
    }
  },
  "remoteUser": "vscode"
}
